<refentry id="netatalk.8">
  <refmeta>
    <refentrytitle>netatalk</refentrytitle>

    <manvolnum>8</manvolnum>

    <refmiscinfo class="date">22 Nov 2015</refmiscinfo>

    <refmiscinfo class="source">@NETATALK_VERSION@</refmiscinfo>
